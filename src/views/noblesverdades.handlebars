<div>
    <div class="nav-hamburger" id="navHamburger">
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
        <div class="hamburger-line"></div>
    </div>
       {{> navbar adminUser=adminUser userlogued=userlogued}}
    <div class="pdf-section">
        {{#if escritos}}
        <div class="pdf-section-show">
            {{#each escritos}}
            <div class="pdf-section-each">
                <div class="pdf-section-each-header">
                    {{#if adminUser}}
                    <button class="btn-delete-pdf" onclick="borrarpdf('{{this._id}}')"><i
                            class="bi bi-x-circle"></i></button>
                    {{/if}}
                    <h5>{{this.title}}</h5>
                    <p><a href="/details/{{this._id}}">Ver pdf <i class="bi bi-filetype-pdf"></i></a></p>
                </div>
                {{#if this.comments}}
                {{#each this.comments}}
                <div class="pdf-section-coments">
                    <p><strong class="coment-name">{{this.name}}</strong>: <span
                            class="coment-text">{{this.coment}}</span>
                    </p>
                    <p class="coment-date">{{this.created_at}}</p>
                </div>
                {{/each}}
                {{else}}
                <div class="p-nocoments">
                    <p>Todavia no hay comentarios</p>
                </div>
                {{/if}}
            </div>
            {{/each}}
            {{else}}
            <div class="p-nopdf">
                <p>Todavia no hay pdfs</p>
            </div>
            {{/if}}
        </div>
        <div class="container-img"><img src="/static/images/mandalaazul.webp" alt="" width="300" height="700"></div>
    </div>
</div>